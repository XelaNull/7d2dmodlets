<configs>
	<append xpath="/entity_classes">

	<entity_class name="animalMutantCoyote" extends="animalCoyote">
		<property name="Mass" value="120"/>
		<property name="SizeScale" value="1.5"/>
		<property name="ExperienceGain" value="1000"/>
		<property name="DeadBodyHitPoints" value="200"/>
		<property name="HasRagdoll" value="false"/>
		<property name="HandItem" value="meleeHandAnimalMutantCoyote"/>
		<effect_group name="Base Effects">
			<triggered_effect trigger="onSelfFirstSpawn" action="AddBuff" target="self" buff="buffMutantCoyoteFireAura"/>
			<passive_effect name="HealthMax" operation="base_set" value="1000"/>
			<passive_effect name="HealthMax" operation="perc_add" value="0"/>
		</effect_group>
	</entity_class>


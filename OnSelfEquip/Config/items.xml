<configs>

<append xpath="/items">


<item name="apparelModdableShades">
	<property name="Extends" value="apparelShades"/>
	<property name="CustomIcon" value="apparelShades"/>
	<property name="Tags" value="clothing,canHaveCosmetic,armor"/>
	<effect_group>
		<passive_effect name="ModSlots" operation="base_set" value="1"/>
		<passive_effect name="AttributeLevel" tags="attPerception" operation="base_add" value="1"/>
	</effect_group>
</item>

<item name="armorRunningShoesModdableDoesWork">
	<property name="CustomIcon" value="apparelRunningShoesRegular"/>
	<property name="Extends" value="apparelRunningShoesRegular"/>
	<property name="Tags" value="lowerbody,feet,clothing,canHaveCosmetic,armor"/>
	<property name="ShowQuality" value="true"/>

	<property class="UMA">
		<property name="Mesh" value="running_shoes"/>
		<property name="Overlay0" value="running_shoes"/>
	</property>

	<effect_group>
		<passive_effect name="ModSlots" operation="base_set" value="1"/>
	</effect_group>
</item>

<item name="armorRunningShoesModdableNotWork">
	<property name="CustomIcon" value="apparelRunningShoesRegular"/>
	<property name="Extends" value="apparelRunningShoesRegular"/>
	<property name="Tags" value="lowerbody,feet,clothing,canHaveCosmetic,armor"/>

	<property class="UMA">
		<property name="Mesh" value="running_shoes"/>
		<property name="Overlay0" value="running_shoes"/>
	</property>

	<effect_group tiered="false">
		<passive_effect name="ModSlots" operation="base_set" value="1"/>
	</effect_group>
</item>

</append>
</configs>



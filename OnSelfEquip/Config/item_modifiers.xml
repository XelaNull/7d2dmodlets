<configs>

<append xpath="/item_modifiers">

	<item_modifier name="modTestImpactBracing" installable_tags="armorFeet,chest,legs,clothing,head,hands,armor,melee,ranged" modifier_tags="falldamage" blocked_tags="noMods" type="attachment">
			<!-- this should be able to go in anything with mod slots -->
		<property name="CustomIcon" value="modArmorImpactBracing"/> <!-- give it an icon -->
		<property name="UnlockedBy" value="modArmorImpactBracingSchematic"/>
		<property name="Material" value="Msteel"/>
		<property name="Stacknumber" value="1"/> <property name="Group" value="Mods"/>
		<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>

		<effect_group tiered="false">
			<triggered_effect trigger="onSelfEquipStart" action="AddBuff" buff="buffImpactBracing"/> <!-- because no special requirements for this buff -->
			<triggered_effect trigger="onSelfEquipStop" action="RemoveBuff" buff="buffImpactBracing"/>
		</effect_group>
		
		<effect_group name="TestParts" tiered="false"> <!-- copy from helmetlight, change position so visible. Also change to laserpointer b/c you can't see the headlight from behind -->
			<triggered_effect trigger="onSelfEquipStart" action="AddPart" part="HeadLight" prefab="#Other/Items?Mods/Sides/side_attachment_laserPrefab.prefab" parentTransform="Spotlight" localPos="0,0,.5" localRot="0,0,180"/>
			<triggered_effect trigger="onSelfEquipStart" action="AddPart" part="HeadLightCam" prefab="#Other/Items?Mods/Sides/side_attachment_laserPrefab.prefab" parentTransform="CameraNode" localPos="0,0,-.5" localRot="180,0,-90"/>
			<triggered_effect trigger="onSelfEquipStop" action="RemovePart" part="HeadLight"/>
			<triggered_effect trigger="onSelfEquipStop" action="RemovePart" part="HeadLightCam"/>
			<triggered_effect trigger="onSelfItemActivate" action="SetPartActive" part="HeadLight" active="@!.IsFPV"/>
			<triggered_effect trigger="onSelfItemActivate" action="SetPartActive" part="HeadLightCam" active="@.IsFPV"/>
			<triggered_effect trigger="onSelfItemDeactivate" action="SetPartActive" part="HeadLight" active="false"/>
			<triggered_effect trigger="onSelfItemDeactivate" action="SetPartActive" part="HeadLightCam" active="false"/>
		</effect_group>
	</item_modifier>
	
		<item_modifier name="modTestImpactBracingActivateable" installable_tags="armorFeet,chest,legs,clothing,head,hands,armor,melee,ranged" modifier_tags="falldamage" blocked_tags="noMods" type="attachment">
			<!-- this should be able to go in anything with mod slots -->
		<property name="CustomIcon" value="modArmorImpactBracing"/> <!-- give it an icon -->
		<property name="UnlockedBy" value="modArmorImpactBracingSchematic"/>
		<property name="Material" value="Msteel"/>
		<property name="Stacknumber" value="1"/> <property name="Group" value="Mods"/>
		<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>

		<effect_group tiered="false">
			<triggered_effect trigger="onSelfItemActivate" action="AddBuff" buff="buffImpactBracing"/> <!-- because no special requirements for this buff -->
			<triggered_effect trigger="onSelfItemDeactivate" action="RemoveBuff" buff="buffImpactBracing"/>
		</effect_group>
		
		<effect_group name="TestParts" tiered="false"> <!-- copy from helmetlight, change position so visible. Also change to laserpointer b/c you can't see the headlight from behind -->
			<triggered_effect trigger="onSelfItemActivate" action="AddPart" part="HeadLight" prefab="#Other/Items?Mods/Sides/side_attachment_laserPrefab.prefab" parentTransform="Spotlight" localPos="0,0,.5" localRot="0,0,180"/>
			<triggered_effect trigger="onSelfItemActivate" action="AddPart" part="HeadLightCam" prefab="#Other/Items?Mods/Sides/side_attachment_laserPrefab.prefab" parentTransform="CameraNode" localPos="0,0,-.5" localRot="180,0,-90"/>
			<triggered_effect trigger="onSelfItemDeactivate" action="RemovePart" part="HeadLight"/>
			<triggered_effect trigger="onSelfItemDeactivate" action="RemovePart" part="HeadLightCam"/>
			<triggered_effect trigger="onSelfItemActivate" action="SetPartActive" part="HeadLight" active="@!.IsFPV"/>
			<triggered_effect trigger="onSelfItemActivate" action="SetPartActive" part="HeadLightCam" active="@.IsFPV"/>
			<triggered_effect trigger="onSelfItemDeactivate" action="SetPartActive" part="HeadLight" active="false"/>
			<triggered_effect trigger="onSelfItemDeactivate" action="SetPartActive" part="HeadLightCam" active="false"/>
		</effect_group>
	</item_modifier>
	
</append>
</configs>


